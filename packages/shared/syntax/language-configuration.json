{
  "comments": {
    "lineComment": ";;"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    {"open": "(", "close": ")"},
    {"open": "[", "close": "]"},
    {"open": "{", "close": "}"},
    {"open": "\"", "close": "\""}
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*\\(;",
      "end": "^\\s*;\\)"
    }
  },
  "wordPattern": "(?!\\b)[a-zA-Z0-9-*/<>!=?+]+",
  "indentationRules": {
    "increaseIndentPattern": "\\(.*[^;\\)]$",
    "decreaseIndentPattern": "^\\s*\\)"
  }
}
